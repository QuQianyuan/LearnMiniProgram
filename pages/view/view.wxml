<!-- 1.view的基本使用 div -->
<view class="box">哈哈哈</view>
<view>嘿嘿嘿</view>

<!-- 2.hove-class: 当用户按下组件时，显示的样式 -->
<view class="box2" 
      hover-class="hover-view" 
      hover-stay-time="0">
  来来来
</view>

<!-- 3.hover-stop-propagation 阻止祖先冒泡 值为非空的 就是阻止 -->
<view class="box3" hover-class="hover2-view">
  <view class="box2" 
      hover-class="hover-view" 
      hover-stay-time="0"
      hover-stop-propagation>
  来来来
</view>
</view>