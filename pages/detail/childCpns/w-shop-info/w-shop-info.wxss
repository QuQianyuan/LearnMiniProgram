/* pages/detail/childCpns/w-shop-info/w-shop-info.wxss */

.shop-info {
  padding: 16rpx 16rpx 50rpx;
  border-bottom: 12rpx solid #f2f2f2;
}

.title-info {
  margin-top: 30rpx;
}

.title-info image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 46rpx;
  border: 1px solid rgba(200, 200, 200, 0.6);
  vertical-align: middle;
}

.title-info text {
  margin: 4rpx 0 0 18rpx;
}

.sell-info {
  display: flex;
  margin: 40rpx 0;
}

.count-info {
  display: flex;
  margin: 20rpx 0;
  border-right: 2rpx solid rgba(200, 200, 200, 0.6);
}

.count-info, .grade-info {
  flex: 1;
  text-align: center;
}

.total-sales, .all-baby {
  flex: 1;
  text-align: center;
}

.count {
  font-size: 40rpx;
}

.text {
  font-size: 28rpx;
  margin-top: 16rpx;
}

.grade-info {
  font-size: 28rpx;
  padding: 0 20rpx;
}

.grade-item {
  display: flex;
}

.grade-item .item-name {
  width: 200rpx;
}

.item-name, .item-score, .item-better {
  margin-top: 8rpx;
}

.item-score, .item-better {
  flex: 1;
}

.good {
  color: #ff5777;
}

.less {
  color: #5ea732;
}

.into-shop {
  text-align: center;
}

.into-shop button {
  padding: 8rpx 100rpx;
}
.into-shop button::after {
  border: none;
}
