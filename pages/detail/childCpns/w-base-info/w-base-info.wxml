<!--pages/detail/childCpns/w-base-info/w-base-info.wxml-->
<view class="base-info">
  <view class="title">{{baseInfo.title}}</view>
  <view class="price-info">
    <text class="new-price">{{baseInfo.newPrice}}</text>
    <text class="old-price">{{baseInfo.oldPrice}}</text>
    <text class="count">{{baseInfo.discountDesc}}</text>
  </view>
  <view class="columns">
    <block wx:for="{{baseInfo.columns}}" wx:key="index">
      <view>{{item}}</view>
    </block>
  </view>
  <view class="services">
    <block wx:for="{{baseInfo.services}}" wx:key="index">
      <block wx:if="{{index !== 0}}">
        <view class="service-item">
          <image src="{{item.icon}}"/>
          <text>{{item.name}}</text>
        </view>
      </block>
    </block>
  </view>
</view>