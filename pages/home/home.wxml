</my-slot>

<my-slot>
  拖动的进度条
  <slider value="60"></slider>
</my-slot>

<view>--------------------------------</view>
<!-- 7.2多个插槽的使用 -->
<!-- 注意事项：
        1.给每一个插槽起一个名字
        2.必须在Components对象中添加一个选项：options -> multipleSlots
 -->
<button size="mini" bindtap="handleChangeShow">切换显示</button>
<block wx:if="{{isShow}}">
  <my-mslot>
    <button size="mini" slot="slot2">我是插入的按钮</button>
    <slider slot="slot1" />
  </my-mslot>
</block>